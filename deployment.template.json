{
    "$schema-template": "1.0.0",
    "modulesContent": {
        "$edgeAgent": {
            "properties.desired": {
                "schemaVersion": "1.0",
                "runtime": {
                    "type": "docker",
                    "settings": {
                        "minDockerVersion": "v1.25",
                        "loggingOptions": "",
                        "registryCredentials": {
                            "default": {
                                "username": "$(CONTAINER_REGISTRY_USERNAME)",
                                "password": "$(CONTAINER_REGISTRY_PASSWORD)",
                                "address": "nickacr.azurecr.io"
                            }
                        }
                    }
                },
                "systemModules": {
                    "edgeAgent": {
                        "type": "docker",
                        "settings": {
                            "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
                            "createOptions": {}
                        }
                    },
                    "edgeHub": {
                        "type": "docker",
                        "status": "running",
                        "restartPolicy": "always",
                        "settings": {
                            "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
                            "createOptions": {
                                "HostConfig": {
                                    "PortBindings": {
                                        "5671/tcp": [{
                                            "HostPort": "5671"
                                        }],
                                        "8883/tcp": [{
                                            "HostPort": "8883"
                                        }],
                                        "443/tcp": [{
                                            "HostPort": "443"
                                        }]
                                    }
                                }
                            }
                        }
                    }
                },
                "modules": {
                    "Castle_ACRDrone": {
                        "settings": {
                            "image": "ntuasecontainer2.azurecr.io/castle_customvision:githubtest",
                            "createOptions": {
                                "ExposedPorts": {
                                    "80/tcp": {}
                                },
                                "HostConfig": {
                                    "PortBindings": {
                                        "80/tcp": [{
                                            "HostPort": "8085"
                                        }]
                                    }
                                }
                            }
                        },
                        "type": "docker",
                        "version": "1.0",
                        "status": "running",
                        "restartPolicy": "always"
                    }
                }
            }
        },
        "$edgeHub": {
            "properties.desired": {
                "schemaVersion": "1.0",
                "routes": {
                    "VideoProcessorModuleToIoTHub": "FROM /* INTO $upstream"
                },
                "storeAndForwardConfiguration": {
                    "timeToLiveSecs": 7200
                }
            }
        }
    }
}